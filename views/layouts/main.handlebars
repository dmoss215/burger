        crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery.js"></script>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <h1 style="text-align: center;">Delicious Burger Stand</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                {{{ body }}}
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <form action="burger/create" method="POST">

                    <!-- Text Area Input -->
                    <div class="row">
                        <!-- Empty Div to help center textarea -->
                        <div class="col-md-3"></div>

                        <!-- Burger Input Box -->
                        <div class="form-group col-md-6">
                            <center>
                                <label for="new_burger" class="submitFont">Request a new burger!</label>
                            </center>
                            <textarea class="form-control" type="text" columns="6" rows="2" id="new_burger" required value="" name="burger_name"></textarea>
                        </div>

                        <div class="col-md-3"></div>
                    </div>

                    <!-- Submit Button -->
                    <center>
                        <button id="submit-button" type="submit" class="btn btn-danger">Make my Burger!</button>
                    </center>
                </form>
            </div>
        </div>

    </div>

</body>

</html>